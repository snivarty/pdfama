{
  "manifest_version": 3,
  "name": "pdfAMA",
  "version": "0.1.0",
  "description": "Ask your PDFs anything - locally with Gemini Nano.",
  "permissions": [
    "scripting",
    "sidePanel",
    "contextMenus",
    "tabs",
    "offscreen",
    "unlimitedStorage",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
    "worker_src": "'self' blob:;"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/pdfjs/build/pdf.mjs",
        "lib/pdfjs/build/pdf.worker.mjs",
        "lib/pdfjs/build/pdfjs-worker-loader.js",
        "lib/marked/marked.min.js",
        "lib/transformers/transformers.min.js",
        "lib/vectoridb/index.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
